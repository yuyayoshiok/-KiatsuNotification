# OpenWeatherMap API設定
OPENWEATHER_API_KEY=あなたのOpenWeatherMapのAPIキーをここに入力してください
CITY_ID=1857550  # 島根県松江市

# LINE Bot設定
LINE_CHANNEL_ACCESS_TOKEN=あなたのLINEチャネルアクセストークンをここに入力してください
LINE_USER_ID=あなたのLINEユーザーIDをここに入力してください

# 気圧閾値設定
PRESSURE_THRESHOLD=1010  # この値以下を低気圧と判定（hPa）
PRESSURE_CHANGE_THRESHOLD=6  # 24時間でこの値以上の気圧変化があると警告（hPa）

# S3設定
S3_BUCKET_NAME=kiatsu-data
S3_ENABLED=false  # S3へのデータ保存を有効にする場合はtrueに変更

# Groq API設定
GROQ_API_KEY=あなたのGroqAPIキーをここに入力してください
USE_GROQ=true
